<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFEB3B"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/news_item_margin"
    android:layout_marginLeft="@dimen/news_inside_item_margin"
    android:layout_marginRight="@dimen/news_inside_item_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#060E2D"
        android:orientation="vertical"
        android:layout_margin="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/news_item_margin"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="65dp"
                android:src="@drawable/left"
                android:contentDescription="@null"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFEB3B"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="65dp"
                android:src="@drawable/right"
                android:contentDescription="@null"/>

        </LinearLayout>


        <TextView
            android:id="@+id/series"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/news_item_margin"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="14sp"
            android:maxLines="1"
            android:gravity="center"/>


        <TextView
            android:id="@+id/points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/news_item_margin"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="14sp"
            android:maxLines="1"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>