<LinearLayout
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/item_back_list"
    android:layout_marginTop="@dimen/news_item_margin"
    android:layout_marginLeft="@dimen/news_inside_item_margin"
    android:layout_marginRight="@dimen/news_inside_item_margin"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/prize"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="15sp"
            android:lineSpacingExtra="10dp"
            android:gravity="center|start"
            android:padding="@dimen/news_inside_item_margin" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/fees"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="15sp"
            android:lineSpacingExtra="10dp"
            android:gravity="center|end"
            android:padding="@dimen/news_inside_item_margin" />

    </LinearLayout>

    <TextView
        android:id="@+id/winners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_back_dark"
        android:text="40% Winners"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="12sp"
        android:gravity="center|start"
        android:padding="@dimen/news_inside_item_margin" />

</LinearLayout>