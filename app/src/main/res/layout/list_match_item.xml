<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_back_list"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/news_item_margin"
    android:layout_marginLeft="@dimen/news_inside_item_margin"
    android:layout_marginRight="@dimen/news_inside_item_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/series"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/news_item_margin"
            android:paddingLeft="@dimen/news_item_margin"
            android:paddingRight="@dimen/news_item_margin"
            android:textColor="@color/textColor"
            android:textSize="12sp"
            android:gravity="start"/>

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/news_item_margin"
            android:paddingLeft="@dimen/news_item_margin"
            android:paddingRight="@dimen/news_item_margin"
            android:textColor="@color/textColor"
            android:textSize="12sp"
            android:gravity="end"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/flagA"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:paddingLeft="@dimen/news_item_margin"
            android:paddingRight="@dimen/news_item_margin"
            android:layout_gravity="center"
            android:contentDescription="@null" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="14sp"
                android:maxLines="1"
                android:gravity="center"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center" />

        </LinearLayout>

        <ImageView
            android:id="@+id/flagB"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:paddingRight="@dimen/news_item_margin"
            android:paddingLeft="@dimen/news_item_margin"
            android:layout_gravity="center"
            android:contentDescription="@null" />

    </LinearLayout>

</LinearLayout>