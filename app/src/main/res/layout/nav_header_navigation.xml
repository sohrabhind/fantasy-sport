<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#36B0D4">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="BALANCE"
            android:textSize="25sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/action_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="40sp"
            android:textColor="@color/white"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/action_account"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_item_height"
        android:orientation="horizontal"
        android:background="@drawable/item_back"
        android:clickable="true"
        android:focusable="true"
        android:paddingStart="@dimen/menu_item_padding"
        android:paddingLeft="@dimen/menu_item_padding"
        tools:ignore="RtlSymmetry">

        <ImageView
            android:layout_width="@dimen/menu_image_size"
            android:layout_height="@dimen/menu_image_size"
            android:layout_gravity="center"
            android:src="@drawable/ic_verified"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account"
            android:textSize="@dimen/button_text_size"
            android:textColor="#7e7e7e"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/menu_item_padding"
            android:layout_marginStart="@dimen/menu_item_padding" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#949494"/>

    <LinearLayout
        android:id="@+id/action_rules"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_item_height"
        android:orientation="horizontal"
        android:background="@drawable/item_back"
        android:clickable="true"
        android:focusable="true"
        android:paddingStart="@dimen/menu_item_padding"
        android:paddingLeft="@dimen/menu_item_padding"
        tools:ignore="RtlSymmetry">

        <ImageView
            android:layout_width="@dimen/menu_image_size"
            android:layout_height="@dimen/menu_image_size"
            android:layout_gravity="center"
            android:src="@drawable/ic_help"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rules"
            android:textSize="@dimen/button_text_size"
            android:textColor="#7e7e7e"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/menu_item_padding"
            android:layout_marginStart="@dimen/menu_item_padding" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#949494"/>

    <LinearLayout
        android:id="@+id/action_share"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_item_height"
        android:orientation="horizontal"
        android:background="@drawable/item_back"
        android:clickable="true"
        android:focusable="true"
        android:paddingStart="@dimen/menu_item_padding"
        android:paddingLeft="@dimen/menu_item_padding"
        tools:ignore="RtlSymmetry">

        <ImageView
            android:layout_width="@dimen/menu_image_size"
            android:layout_height="@dimen/menu_image_size"
            android:layout_gravity="center"
            android:src="@drawable/ic_share"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share App"
            android:textSize="@dimen/button_text_size"
            android:textColor="#7e7e7e"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/menu_item_padding"
            android:layout_marginStart="@dimen/menu_item_padding" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#949494"/>

    <LinearLayout
        android:id="@+id/action_rate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_item_height"
        android:orientation="horizontal"
        android:background="@drawable/item_back"
        android:clickable="true"
        android:focusable="true"
        android:paddingStart="@dimen/menu_item_padding"
        android:paddingLeft="@dimen/menu_item_padding"
        tools:ignore="RtlSymmetry">

        <ImageView
            android:layout_width="@dimen/menu_image_size"
            android:layout_height="@dimen/menu_image_size"
            android:layout_gravity="center"
            android:src="@drawable/ic_star"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate Us"
            android:textSize="@dimen/button_text_size"
            android:textColor="#7e7e7e"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/menu_item_padding"
            android:layout_marginStart="@dimen/menu_item_padding" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#949494"/>

</LinearLayout>
