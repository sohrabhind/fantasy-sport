<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/news_item_margin"
    android:layout_marginLeft="@dimen/news_item_margin"
    android:layout_marginRight="@dimen/news_item_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nameView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="14sp"
            android:gravity="center|start"
            android:layout_marginBottom="20dp"
            android:paddingLeft="@dimen/news_item_margin"
            android:paddingRight="@dimen/news_item_margin"/>

        <TextView
            android:id="@+id/pointsView"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="14sp"
            android:maxLines="1"
            android:gravity="center|start"
            android:paddingLeft="@dimen/news_item_margin"
            android:paddingRight="@dimen/news_item_margin" />

        <TextView
            android:id="@+id/rankView"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="14sp"
            android:maxLines="1"
            android:gravity="center|start"
            android:paddingLeft="@dimen/news_item_margin"
            android:paddingRight="@dimen/news_item_margin" />

    </LinearLayout>


    <TextView
        android:id="@+id/winningView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="14sp"
        android:maxLines="1"
        android:gravity="center|start"
        android:padding="@dimen/news_item_margin" />

</LinearLayout>